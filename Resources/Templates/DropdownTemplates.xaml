<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:QM_ItemCreatorTool.ViewModel">
    <DataTemplate x:Key="CustomComboBox.ItemDropdown" DataType="model:FireModeViewModel">
        <DockPanel LastChildFill="True" Height="20">
            <TextBlock Text="{Binding Path=ID}" FontSize="11" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="CustomComboBox.ItemTemplate" DataType="model:FireModeViewModel">
        <StackPanel Orientation="Horizontal" Margin="0,-4">
            <TextBlock Text="{Binding Path=ID}" Style="{DynamicResource CustomComboBox.TextBox}" Margin="2,0" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>